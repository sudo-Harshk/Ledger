rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is a teacher
    function isTeacher() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Users can only read their own profile.
      // Teachers can read all user profiles (needed for the dashboard).
      allow read: if request.auth.uid == userId || isTeacher();

      // Allow all users (even unauthenticated) to list/query users collection (for username login)
      allow list: if true;

      // Only teachers can create new user documents.
      allow create: if isTeacher();

      // A user can update their own document, BUT they cannot change their role
      // or their payment history map.
      allow update: if request.auth.uid == userId 
                    && request.resource.data.role == resource.data.role
                    && request.resource.data.totalDueByMonth == resource.data.totalDueByMonth;

      // Rules for the 'monthlySummaries' subcollection
      match /monthlySummaries/{monthId} {
        // Only the user (owner) or a teacher can read
        allow read: if request.auth.uid == userId || isTeacher();
        // Only teachers can write
        allow write: if isTeacher();
      }
    }

    // Rules for the 'attendance' collection
    match /attendance/{attendanceId} {
      // A student can read their own attendance records.
      // A teacher can read all attendance records.
      allow read: if request.auth.uid == resource.data.studentId || isTeacher();

      // A user can only create an attendance record for themselves,
      // and the initial status must be 'pending'.
      allow create: if request.auth.uid == request.resource.data.studentId
                     && request.resource.data.status == 'pending';

      // Only teachers can update attendance records (e.g., to approve them).
      allow update: if isTeacher();
    }
    
    // Rules for the 'revenueSummaries' collection
    match /revenueSummaries/{summaryId} {
        // Any signed-in user can read the summary data (it's not sensitive).
        allow read: if request.auth != null;
        
        // Only teachers can update the summary document.
        allow write: if isTeacher();
    }
  }
}